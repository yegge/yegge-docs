site_name: Yegge Docs
site_url: https://docs.yegge.com
theme:
  name: material
  # … your theme options …
  features:
    - navigation.indexes   # ← enables folder index pages

nav:
  - Home: index.md
  - About: about.md
  - Guides:
    - guides/index.md
    - guides/install.md
    - guides/faq.md
  font:
    text: Inter
    code: JetBrains Mono
  palette:
    - scheme: slate
      primary: black
      accent: indigo
      toggle:
        icon: material/weather-night
        name: Switch to light mode
  features:
    - navigation.indexes
    - navigation.path
    - navigation.instant
    - content.code.copy
    - content.tabs.link
    - search.suggest
    - search.highlight
    - toc.follow

logo: _assets/logo.svg
favicon: _assets/logo.svg
extra_css:
  - overrides/stylesheets/extra.css

markdown_extensions:
  - admonition
  - attr_list
  - def_list
  - footnotes
  - pymdownx.highlight
  - pymdownx.superfences
  - pymdownx.emoji
  - pymdownx.details
  - toc:
      permalink: true

plugins:
  - search
  - minify:
      minify_html: true
  - git-revision-date-localized:
      type: date
      fallback_to_build_date: true

nav:
  - Home: index.md
  - About: about.md